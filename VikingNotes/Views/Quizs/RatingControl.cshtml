@using VikingNotes.Models
@model VikingNotes.Models.Quiz

@{
    ViewBag.Title = "_RatingControl";
}


<dd>
    @{
        if (Model.Ratings.Count > 0)
            { <p> Overall Rating for @Model.Title is @Model.OverallRating</p> }
        else
            { <p>Rate for @Model.Id</p>}
    }
    
    @{
        for (int i = 0; i < 5; i++)
        {
            <a href="#" name="Rank" data-rank="@i" data-quizId="@Model.Id">
                <i class="glyphicon glyphicon-star@(Model.OverallRating < i ? "-empty" : "")"></i>
            </a>
        }
        @*<input type="submit" value="submit" />*@
    }
    

